{
  "schemaVersion": 1,
  "id": "businesscraft",
  "version": "1.0.0",
  "name": "BusinessCraft",
  "description": "A sophisticated town management and tourism economy system for Minecraft featuring complete town management, multi-platform systems, advanced UI framework, and tourism economy mechanics.",
  "authors": [
    "Quackers29"
  ],
  "contributors": [],
  "contact": {
    "homepage": "https://github.com/quackers29/businesscraft",
    "sources": "https://github.com/quackers29/businesscraft",
    "issues": "https://github.com/quackers29/businesscraft/issues"
  },
  "license": "MIT",
  "icon": "assets/businesscraft/icon.png",
  "environment": "*",
  
  "entrypoints": {
    "main": [
      "com.quackers29.businesscraft.fabric.BusinessCraftFabric"
    ],
    "client": [
      "com.quackers29.businesscraft.fabric.client.BusinessCraftFabricClient"
    ]
  },
  
  "mixins": [
    "businesscraft.mixins.json",
    {
      "config": "businesscraft.client.mixins.json",
      "environment": "client"
    }
  ],
  
  "depends": {
    "fabricloader": ">=0.14.17",
    "fabric-api": ">=0.83.0",
    "minecraft": "~1.20.1",
    "java": ">=17"
  },
  
  "recommends": {
    "modmenu": "*",
    "cloth-config": "*"
  },
  
  "suggests": {
    "create": "*",
    "jei": "*",
    "rei": "*"
  },
  
  "custom": {
    "modmenu": {
      "badges": ["economy", "management"],
      "links": {
        "modmenu.discord": "https://discord.gg/businesscraft"
      }
    }
  }
} 